# omz setup

export ZSH="$HOME/.config/omz/master"
export ZSH_CUSTOM="$HOME/.config/omz/custom"

ZSH_THEME="mass"

plugins=(
  composer
  git
  zsh-autosuggestions
  you-should-use
  nvm
  vi-mode
  fancy-ctrl-z
  golang
  rust
)

source $ZSH/oh-my-zsh.sh

if [ -e "$HOME/.zshlocal" ]; then
  source "$HOME/.zshlocal"
fi

alias pg="pgrep -a"
alias pk="pkill"

# nvim setup
export PATH="$PATH:/opt/nvim/bin"
export EDITOR="nvim"

